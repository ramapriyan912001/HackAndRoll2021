<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewProfile">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileName" android:fontFamily="sans-serif" android:textSize="24sp"
            android:text="User's Name" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/profilePic"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profileName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="Edit Profile"
            android:layout_width="132dp"
            android:layout_height="76dp" android:id="@+id/profileSave"
            android:fontFamily="sans-serif" android:background="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="37dp" android:layout_marginRight="37dp"
            app:layout_constraintTop_toBottomOf="@+id/profileName" app:layout_constraintHorizontal_bias="0.593"
            app:layout_constraintVertical_bias="0.714" app:layout_constraintBottom_toBottomOf="@+id/profilePic"/>
    <TextView
            android:text="Username: Username Goes Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileUsername"
            android:fontFamily="sans-serif"
            android:textSize="20sp" android:gravity="left"
            app:layout_constraintTop_toBottomOf="@+id/profilePic"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.307"/>
    <TextView
            android:text="E-Mail Address: E-Mail Goes Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileEmail"
            android:fontFamily="sans-serif"
            android:gravity="left" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/profileUsername"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:text="Dietary Preferences:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileDiet"
            android:textSize="20sp"
            android:fontFamily="sans-serif" android:gravity="left"
            app:layout_constraintTop_toBottomOf="@+id/profileEmail"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.17"/>
    <Button
            android:text="Chat"
            android:layout_width="131dp"
            android:layout_height="73dp" android:id="@+id/profileToChat"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileDiet" app:layout_constraintVertical_bias="0.972"/>
    <Button
            android:text="Schedule Match"
            android:layout_width="132dp"
            android:layout_height="72dp"
            android:id="@+id/profileToMatch"
            android:background="#FFFFFF" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/profileToChat"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/profileDiet"
            app:layout_constraintVertical_bias="0.966"/>
    <Button
            android:text="View Match History"
            android:layout_width="140dp"
            android:layout_height="76dp" android:id="@+id/profileToHistory"
            android:background="#FFFFFF" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/profileToMatch"
            android:layout_marginStart="5dp" android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileDiet" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.966"/>

</androidx.constraintlayout.widget.ConstraintLayout>